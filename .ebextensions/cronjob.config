files:
    "/etc/cron.d/cron_reporting":
        mode: "000644"
        owner: root
        group: root
        content: |
            0 0 1 * * root /usr/local/bin/load_reporting.sh
    "/usr/local/bin/load_reporting.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            date > /tmp/date
            php bin/console reporting:data-indicator:add
            exit 0
            
commands:
    01_remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"