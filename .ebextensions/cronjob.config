files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root cd /var/app/ondeck && /usr/local/bin/myscript.sh
    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            date > /tmp/date
            pwd >> /var/log/cron
            php bin/console reporting:data-indicator:add >> /var/log/cron
            exit 0
            
commands:
    01_remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"
